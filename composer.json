{
    "name": "shopware/swag-graphql",
    "type": "shopware-platform-plugin",
    "minimum-stability": "stable",
    "description": "A Simple Plugin that exposes an GraphQL-API for the Shopware 6.4.X Core-API.",
    "keywords": [
        "shopware",
        "shop"
    ],
    "homepage": "https://www.shopware.com",
    "license": "MIT",
    "authors": [
        {
            "name": "shopware AG"
        }
    ],
    "require": {
        "php": "~8.2",
        "webonyx/graphql-php": "^15.12",
        "doctrine/inflector": "^2.0"
    },
    "extra": {
        "installer-name": "SwagGraphQL",
        "shopware-plugin-class": "SwagGraphQL\\SwagGraphQL",
        "copyright": "(c) by shopware AG",
        "label": {
            "de_DE": "GraphQL",
            "en_GB": "GraphQL"
        }
    },
    "autoload": {
        "psr-4": {
            "SwagGraphQL\\": "src/",
            "GraphQL\\": "vendor/webonyx/graphql-php/src/",
            "Doctrine\\Inflector\\": "vendor/doctrine/inflector/lib/Doctrine/Inflector/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SwagGraphQL\\Tests\\": "Tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "9.5.x-dev",
        "phpstan/phpstan": "1.4.x-dev",
        "rector/rector": "^1.2",
        "frosh/shopware-rector": "^0.4.0"
    }
}
